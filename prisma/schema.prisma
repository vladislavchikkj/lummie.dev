generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Project {
  id        String        @id @default(uuid())
  name      String?
  createdAt DateTime      @default(now())
  updatedAt DateTime      @updatedAt
  userId    String
  status    ProjectStatus @default(PENDING)
  sandboxId String?
  messages  Message[]
}

model Message {
  id        String      @id @default(uuid())
  content   String
  role      MessageRole
  type      MessageType
  createdAt DateTime    @default(now())
  updatedAt DateTime    @updatedAt
  projectId String
  fragment  Fragment?
  project   Project     @relation(fields: [projectId], references: [id], onDelete: Cascade)
  isFirst   Boolean     @default(false)
}

model Fragment {
  id         String   @id @default(uuid())
  messageId  String   @unique
  sandboxUrl String
  title      String
  files      Json
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  message    Message  @relation(fields: [messageId], references: [id], onDelete: Cascade)
}

model Usage {
  key    String    @id
  points Int
  expire DateTime?
}

model Chat {
  id        String   @id @default(uuid())
  userId    String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  messages ChatMessage[]
}

model ChatMessage {
  id        String      @id @default(uuid())
  chatId    String
  content   String
  role      MessageRole
  type      String
  createdAt DateTime    @default(now())
  chat      Chat        @relation(fields: [chatId], references: [id])
}

enum ProjectStatus {
  PENDING
  COMPLETED
  ERROR
  NOT_STARTED
}

enum MessageRole {
  USER
  ASSISTANT
}

enum MessageType {
  RESULT
  ERROR
}
